<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        style="?android:buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/fragment_button_sort_price"
            style="@style/SortButtonBar"
            android:text="@string/fragment_button_sort_price"/>

        <Button
            android:id="@+id/fragment_button_sort_popular"
            style="@style/SortButtonBar"
            android:text="@string/fragment_button_sort_popular"/>

        <Button
            android:id="@+id/fragment_button_sort_new"
            style="@style/SortButtonBar"
            android:text="@string/fragment_button_sort_new"/>

    </LinearLayout>

    <View style="@style/VendingActivitySplitter" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list_items_recycler_view_snacks_drinks"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="horizontal" />

</LinearLayout>