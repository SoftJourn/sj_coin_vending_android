<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:context=".activities.VendingActivity">

            <View style="@style/VendingActivitySplitter" />

            <LinearLayout style="@style/VendingActivityLayoutCategoryHeaders">

                <TextView
                    android:id="@+id/textViewLastPurchasesDrinks"
                    style="@style/VendingActivityCategoryText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/layout_vending_last_purchases" />

                <TextView
                    android:id="@+id/textViewLastPurchasesSeeAll"
                    style="@style/SeeAllTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/container_fragment_products_list_last_purchases"
                style="@style/VendingActivityCategoryContainer" />

            <View style="@style/VendingActivitySplitter" />

            <LinearLayout style="@style/VendingActivityLayoutCategoryHeaders">

                <TextView
                    android:id="@+id/textViewDrinks"
                    style="@style/VendingActivityCategoryText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/layout_vending_featured" />

                <TextView
                    android:id="@+id/textViewFeaturedSeeAll"
                    style="@style/SeeAllTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/container_fragment_products_list_featured"
                style="@style/VendingActivityCategoryContainer" />

            <View style="@style/VendingActivitySplitter" />

            <LinearLayout style="@style/VendingActivityLayoutCategoryHeaders">

                <TextView
                    android:id="@+id/textViewBestSellers"
                    style="@style/VendingActivityCategoryText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/layout_vending_best_sellers" />

                <TextView
                    android:id="@+id/textViewBestSellersSeeAll"
                    style="@style/SeeAllTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/container_fragment_products_list_best_sellers"
                style="@style/VendingActivityCategoryContainer" />

        </LinearLayout>
    </ScrollView>

