<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_item_user_parent_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/holo_green_light"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/layout_item_product_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/softjourn_logo"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/layout_item_product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="id"/>

            <TextView
                android:id="@+id/layout_item_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="id"/>

            <TextView
                android:id="@+id/layout_item_product_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="id"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorAccent" />
</LinearLayout>